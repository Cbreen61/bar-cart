<h1>Create a Cocktail </h1>
<p><%= @error %></p>
<form action="/cocktails" method="post">
    <label>Title</label>
    <input type=text name="title">
    <label>Method</label>
    <textarea name="method"></textarea>
    <label>Image URL</label>
    <input type=text name="image">
    <label>Add Existing Ingredient or Create your own </label>
    <input type=text name="ingredient[name]">
    <% @ingredients.each.with_index do |ingredient, index|%>
        <% if index % 10 == 0 %>
            <br>
            <%end%>
        <input type="checkbox" name= "ingredient_ids[]" value="<%= ingredient.id %>"><%= ingredient.name%></input>
    <%end%>
   
    <button type=submit>Add Cocktail</button>
</form>