        <input type="text" placeholder="Ingredient Name" name="ingredients[][name]">
        <input type="text" placeholder="Link to Image" name="ingredients[][image]"><br>
        <input type="text" placeholder="Ingredient Name" name="ingredients[][name]">
        <input type="text" placeholder="Link to Image" name="ingredients[][image]"><br>
        <label>Method</label>
        <textarea name="cocktail[method]" placeholder="Instructions for making this recipe"></textarea>
        <label>Image URL</label>
        <input type="text" placeholder="Link to cocktail image" name="cocktail[image]">    
    <% @ingredients.each.with_index do |ingredient, index|%>
        <input type="checkbox" name= "cocktail[ingredient_ids][]" value="<%= ingredient.id %>"><%= ingredient.name%></input>
    <%end%>

    <button type=submit>Add Cocktail</button>
</form>